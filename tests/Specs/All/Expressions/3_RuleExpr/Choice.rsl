scheme Choice =
    class
        type
            Range = {| i : Int :- i >= 0 /\ i < 4 |}
        
        transition_system [TS]
            variable
                x[t : Range]: Bool

            init_constraint
                all y : Range :- x[.y.] = true

            transition_rules
                true ==> x'[.1.] = false
                [=]
                false ==> x'[.2.] = false
                [=]
                true ==> x'[.3.] = false
        end
    end
